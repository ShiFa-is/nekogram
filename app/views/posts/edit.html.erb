<div class="cover-edit">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">EDIT</h1>
    </div>
    <div class="row justify-content-center">
      <%= form_with model: @post, url:"/posts/#{@post.id}", local:true do |f| %>
      <div class="form-group">
        <label class="form-label">TRAINING MENU</label>
        <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">TRAINING NOTE</label>
        <%=f.text_area :text, rows: 10, class: "form-control" %>
      </div>
      <div class="form-group">
        <label class="form-label">画像</label><br>
        <%= f.attachment_field :image %>
      </div>
      <%= f.submit '保存する', class: "btn btn-success" %><br>
      <%= link_to '投稿詳細ページへ', post_path(@post), class: "btn btn-dark mt-3" %>
      <% end %>
    </div>
  </div>
</div>